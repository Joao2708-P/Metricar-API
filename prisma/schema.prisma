// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  card_credit String
  reserva     Reserva[]
  card        CreditCard[]
  cretadeAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
}

model Car{
  id                     String       @id @default(uuid())
  name                   String
  imagem                 String       @db.Text
  preco                  Decimal
  quilometragem          Int 
  ano                    Int
  condicao               String  
  exterior_color         String
  interior_color         String
  disponibilidade        Boolean
  tipo_do_carro_id       String
  reserva                Reserva[]
  carPromotion           CarPromotion[]
  type_slug              String
  cretadeAt              DateTime @default(now())
  updateAt               DateTime @updatedAt
}

model Reserva{
  id                   String         @id @default(uuid())
  data_da_reserva      DateTime
  data_de_devolucao    DateTime
  id_user              String
  id_car               String
  preco_total          Decimal
  card_credit_id       String
  car                  Car    @relation(fields: [id_car], references: [id])
  user                 User   @relation(fields: [id_user], references: [id])
}

model CreditCard {
  id            String   @id @default(uuid())
  cardNumber    String   @unique
  expiration    DateTime
  cvv           String
  password      String
  user_id       String
  saldo         Decimal
  owner         User    @relation(fields: [user_id], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model CarPromotion {

  id          Int @id @default(dbgenerated("0"))
  description String
  discount    Decimal
  start_date  DateTime
  end_date    DateTime
  car_id      String 
  car         Car  @relation(fields: [car_id], references: [id])
}